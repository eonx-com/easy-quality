{
    "name": "eonx-com/easy-quality",
    "description": "Makes using of code quality tools for PHP projects of EonX easier",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "~8.2",
        "jangregor/phpstan-prophecy": "2.0.0",
        "phpmd/phpmd": "2.15.0",
        "phpstan/phpdoc-parser": "2.0.0",
        "phpstan/phpstan": "2.0.3",
        "rector/rector": "2.0.0",
        "slevomat/coding-standard": "dev-master",
        "symplify/easy-coding-standard": "12.5.4",
        "symplify/phpstan-extensions": "12.0.0",
        "symplify/phpstan-rules": "14.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyQuality\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyQuality\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/pmc"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check-all": [
            "@composer check-ecs",
            "@composer check-phpstan",
            "@composer check-rector"
        ],
        "check-ecs": "php vendor/bin/ecs check --clear-cache --config=quality/ecs.php",
        "check-phpstan": "vendor/bin/phpstan analyse --ansi --configuration=quality/phpstan.neon",
        "check-rector": "vendor/bin/rector --dry-run --clear-cache --config=quality/rector.php",
        "fix-all": [
            "@composer fix-ecs",
            "@composer fix-rector"
        ],
        "fix-ecs": "php vendor/bin/ecs check --fix --config=quality/ecs.php",
        "fix-rector": "vendor/bin/rector --clear-cache --config=quality/rector.php"
    }
}
