{
    "name": "eonx-com/easy-quality",
    "description": "Makes using of code quality tools for PHP projects of EonX easier",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "~8.0",
        "jangregor/phpstan-prophecy": "^1.0",
        "phpmd/phpmd": "^2.11",
        "phpstan/phpdoc-parser": "^1.2",
        "phpstan/phpstan": "^1.4",
        "rector/rector": "^0.12",
        "slevomat/coding-standard": "^7.0",
        "symplify/easy-coding-standard": "^10.0",
        "symplify/phpstan-extensions": "^10.0",
        "symplify/phpstan-rules": "^10.0",
        "nette/utils": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyQuality\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyQuality\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
