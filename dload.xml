<?xml version="1.0" encoding="UTF-8"?>
<dload
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/php-internal/dload/refs/heads/1.x/dload.xsd"
>
    <actions>
        <download software="pmc-phar" type="phar" extract-path="./vendor/bin"/>
        <!--<download software="pmc-json" extract-path="./"/>-->
    </actions>
    <registry>
        <software name="pmc-phar">
            <repository type="github" uri="eruban/php-phpmetrics-coupling"/>
            <binary name="pmc.phar"/>
        </software>
        <software name="pmc-json">
            <repository type="github" uri="eruban/php-phpmetrics-coupling"/>
            <file pattern="/^pmc\.json\.example$/" rename="pmc.json" extract-path="./"/>
        </software>
    </registry>
</dload>
